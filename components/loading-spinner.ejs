<!-- Loading Spinner Component -->
<div id="<%= id || 'loadingSpinner' %>" class="loading-overlay text-center p-4" style="display: none;">
  <div class="d-inline-block">
    <div style="width: 40px; height: 40px; border: 4px solid #f3f4f6; border-top: 4px solid #3b82f6; border-radius: 50%; animation: spin 1s linear infinite; margin: 0 auto;"></div>
    <p class="mt-2 text-muted"><%= message || 'Παρακαλώ περιμένετε...' %></p>
  </div>
</div>

<style>
@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}
</style>