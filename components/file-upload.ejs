<!-- File Upload Component -->
<div class="file-upload-section mb-4">
  <div class="text-center p-4 border rounded bg-light">
    <h4 class="mb-3"><%= title || 'Επιλογή Αρχείου' %></h4>
    
    <div class="file-input-wrapper">
      <input 
        type="file" 
        id="<%= inputId %>" 
        name="<%= inputName %>" 
        accept="<%= accept || '.csv,.xlsx,.xls' %>"
        class="d-none"
        <% if (required) { %>required<% } %>
        <% if (onChange) { %>onchange="<%= onChange %>"<% } %>
      >
      
      <label for="<%= inputId %>" class="btn btn-primary btn-large cursor-pointer">
        📁 <span id="<%= inputId %>Label"><%= buttonText || 'Επιλέξτε Αρχείο' %></span>
      </label>
    </div>
    
    <div id="<%= inputId %>Info" class="mt-3 text-muted" style="display: none;">
      <small>Επιλεγμένο αρχείο: <span id="<%= inputId %>Name"></span></small>
    </div>
    
    <% if (helpText) { %>
      <div class="mt-2">
        <small class="text-muted"><%= helpText %></small>
      </div>
    <% } %>
  </div>
</div>

<script>
document.getElementById('<%= inputId %>').addEventListener('change', function(e) {
  const file = e.target.files[0];
  const label = document.getElementById('<%= inputId %>Label');
  const info = document.getElementById('<%= inputId %>Info');
  const name = document.getElementById('<%= inputId %>Name');
  
  if (file) {
    label.textContent = '✓ Αρχείο Επιλέχθηκε';
    name.textContent = file.name;
    info.style.display = 'block';
  } else {
    label.textContent = '<%= buttonText || "Επιλέξτε Αρχείο" %>';
    info.style.display = 'none';
  }
});
</script>