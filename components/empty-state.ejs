<%
  // Empty State Component - Shows when no data exists with call-to-action
  // Required: title, description
  // Optional: icon, actionText, actionOnclick, actionHref, actionClass
  
  var emptyIcon = typeof icon !== 'undefined' ? icon : '<svg class="h-24 w-24" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/></svg>';
  var emptyActionText = typeof actionText !== 'undefined' ? actionText : '';
  var emptyActionOnclick = typeof actionOnclick !== 'undefined' ? actionOnclick : '';
  var emptyActionHref = typeof actionHref !== 'undefined' ? actionHref : '';
  var emptyActionClass = typeof actionClass !== 'undefined' ? actionClass : 'btn-primary';
  var emptyActionIcon = typeof actionIcon !== 'undefined' ? actionIcon : '';
%>

<div class="bg-white rounded-xl shadow-sm border border-gray-200 p-12 text-center">
  <div class="text-gray-300 mx-auto mb-6 flex items-center justify-center">
    <%- emptyIcon %>
  </div>
  <h3 class="text-2xl font-bold text-gray-700 mb-2"><%= title %></h3>
  <p class="text-gray-500 mb-6"><%= description %></p>
  
  <% if (emptyActionText) { %>
    <% if (emptyActionHref) { %>
      <a href="<%= emptyActionHref %>" class="btn <%= emptyActionClass %> gap-2">
        <% if (emptyActionIcon) { %><%- emptyActionIcon %><% } %>
        <%= emptyActionText %>
      </a>
    <% } else if (emptyActionOnclick) { %>
      <button onclick="<%= emptyActionOnclick %>" class="btn <%= emptyActionClass %> gap-2">
        <% if (emptyActionIcon) { %><%- emptyActionIcon %><% } %>
        <%= emptyActionText %>
      </button>
    <% } %>
  <% } %>
</div>
